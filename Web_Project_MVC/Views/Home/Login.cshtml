@{
    ViewBag.Title = "iRent | Login page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="gauto-breadcromb-area section_70">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcromb-box">
                    <h3>Login page</h3>
                    <ul>
                        <li><i class="fas fa-home"></i></li>
                        <li>@Html.ActionLink("Home", "Index")</li>
                        <li><i class="fas fa-angle-right"></i></li>
                        <li>login</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section-sm">
    <div class="container">
        <div class="row">
            <div class="col-md-7 mx-auto">
                <div class="login-form bg-light">
                    <div class="card card-signin my-5 shadow">
                        <div class="card-body">
                            <h5 class="card-title text-center">Login</h5>
                            @using (Ajax.BeginForm("Login", "Home", new AjaxOptions { OnSuccess = "OnSuccess" }))
                            {
                                <div class="form-group">
                                    <label>USERNAME</label>
                                    <div class="input-group mb-2">
                                        @Html.TextBox("Username", null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>PASSWORD</label>
                                    <div class="input-group mb-2">
                                        @Html.TextBox("Password", null, new { @class = "form-control", type = "password" })
                                    </div>
                                </div>
                                <br />
                                <div class="center-button-card">
                                    <button class="gauto-btn" type="submit">Sign in</button>
                                </div>
                            }
                            <hr />
                            <p class="text-center">Dont have an account? @Html.ActionLink("Register!", "Register")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    (function ($) {
        $(document).ready(function () {
            $("form").validate({
                rules: {
                    'Username': {
                        required: true
                    },
                    'Password': {
                        required: true
                    }
                }
            });
        });
    })(jQuery)
</script>